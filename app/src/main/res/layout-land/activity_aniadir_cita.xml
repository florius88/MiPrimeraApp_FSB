<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AniadirCitaActivity">

    <TextView
            android:text="@string/txt_cita"
            android:layout_width="140dp"
            android:layout_height="25dp" android:id="@+id/txtAniadirCitaCita"
            android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.676" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/editTextAniadirCitaCita"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/txt_descripcion"
            android:layout_width="204dp"
            android:layout_height="23dp" android:id="@+id/txtAniadirCitaDescripcion"
            android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.759"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextAniadirCitaDescripcion"/>
    <EditText
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editTextAniadirCitaCita"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/txtAniadirCitaDescripcion"
            app:layout_constraintHorizontal_bias="0.877"/>
    <Button
            android:layout_width="112dp"
            android:layout_height="50dp" android:id="@+id/btnAniadirCitaAniadir"
            android:text="@string/btn_aniadir"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="36dp"
            app:layout_constraintHorizontal_bias="0.909" android:textSize="18sp"/>
    <EditText
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editTextAniadirCitaDescripcion"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/btnAniadirCitaAniadir"
            app:layout_constraintHorizontal_bias="0.877"/>
    <CalendarView
            android:layout_width="306dp"
            android:layout_height="275dp" android:id="@+id/calAniadirCitaCalendario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.654"/>
</androidx.constraintlayout.widget.ConstraintLayout>