<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AcercaDeActivity">

    <ImageView
            android:layout_width="291dp"
            android:layout_height="242dp" app:srcCompat="@drawable/yo" android:id="@+id/imgAcercaDeFotoyo"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@drawable/yo" app:layout_constraintHorizontal_bias="0.154"/>
    <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@drawable/ic_github" android:id="@+id/imgBtnAcercaDeGithub"
            android:scaleType="centerInside" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewAcercaDeNombre"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.056" android:layout_marginEnd="84dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/txt_miNombre"
            android:layout_width="239dp"
            android:layout_height="63dp" android:id="@+id/textViewAcercaDeNombre"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="36sp" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.849" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="76dp"/>
    <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@drawable/ic_twitter" android:id="@+id/imgBtnAcercaDeTwitter"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewAcercaDeNombre"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.056" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/imgBtnAcercaDeGithub"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.896"/>

</androidx.constraintlayout.widget.ConstraintLayout>