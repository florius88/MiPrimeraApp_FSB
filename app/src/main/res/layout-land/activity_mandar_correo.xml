<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MandarCorreoActivity">

    <EditText
            android:layout_width="303dp"
            android:layout_height="131dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/txtMandarCorreoTexto"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.82" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="76dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtEmailMandarCorreoDestinatario"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtMandarCorreoLabelDestinatario"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.096" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintVertical_bias="0.032"/>
    <TextView
            android:text="@string/txt_asunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtMandarCorreoLabelDestinatario2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.062"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtMandarCorreoAsunto"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txtMandarCorreoLabelDestinatario2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083"/>
    <TextView
            android:text="@string/txt_destinatario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtMandarCorreoLabelDestinatario"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtMandarCorreoAsunto"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.076"/>
    <Button
            android:text="@string/btn_mandarMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnMandarCorreoMandar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txtMandarCorreoTexto"
            app:layout_constraintHorizontal_bias="0.88" app:layout_constraintVertical_bias="0.01"/>
</androidx.constraintlayout.widget.ConstraintLayout>